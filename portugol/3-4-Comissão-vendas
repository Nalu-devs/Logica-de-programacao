programa
{
	
	funcao inicio()
	{
		cadeia nome
		real sal_fixo, valor_vendas, sal_final
		escreva("Digite o nome do funcionario: ")
		leia(nome)
		escreva("Digite o seu salário fixo: ")
		leia(sal_fixo)
		escreva("Digite o valor das suas vendas: ")
		leia(valor_vendas)
		se(valor_vendas<=2000){
			escreva("O funcionário: ", nome, " Receberá: ", sal_final=valor_vendas*0.03+sal_fixo)
		}
		senao{
			se(valor_vendas>2000 e valor_vendas<=5000){
				escreva("O funcionário: ", nome, " Receberá: ", sal_final=valor_vendas*0.05+sal_fixo)
			}
			senao{
				se(valor_vendas>5000){
					escreva("O funcionário: ", nome, " Receberá: ", sal_final=valor_vendas*0.1+sal_fixo)
				}
				senao{
					escreva("O funcionário: ", nome, " Receberá: ", sal_fixo)
				}
			}
		}
	}
}
